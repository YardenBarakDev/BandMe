<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Fragment_UserProfile"
    android:background="@color/primary_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="?attr/actionBarSize"
           android:background="@color/primary"
           >
           <ImageView
               android:id="@+id/OtherUserProfile_IMAGE_sendMessage"
               android:tag="OtherUserProfile_IMAGE_sendMessage"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/message_icon"
               android:layout_margin="5dp"
               android:layout_alignParentEnd="true"
               />

           <ImageView
               android:id="@+id/OtherUserProfile_IMAGE_close"
               android:tag="OtherUserProfile_IMAGE_close"
               android:layout_width="20dp"
               android:layout_height="match_parent"
               android:src="@drawable/left_arrow"
               android:layout_alignParentStart="true"
               android:layout_centerVertical="true"
               android:layout_margin="5dp"
               android:contentDescription="@string/return_btn"
               />
       </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/OtherUserProfile_IMAGE_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/app_background"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/OtherUserProfile_IMAGE_profilePicture"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    app:strokeWidth="4dp"
                    app:strokeColor="@android:color/black"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    android:layout_margin="20dp"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UserProfile_LBL_firstName"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:layout_marginEnd="3dp"
                    />

                <TextView
                    android:id="@+id/OtherUserProfile_LBL_firstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UserProfile_LBL_lastName"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:layout_marginEnd="3dp"
                    />

                <TextView
                    android:id="@+id/OtherUserProfile_LBL_lastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UserProfile_LBL_age"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:layout_marginEnd="3dp"
                    />

                <TextView
                    android:id="@+id/OtherUserProfile_LBL_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UserProfile_LBL_district"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:layout_marginEnd="3dp"
                    />

                <TextView
                    android:id="@+id/OtherUserProfile_LBL_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UserProfile_LBL_instruments"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:layout_marginEnd="3dp"
                    />

                <TextView
                    android:id="@+id/OtherUserProfile_LBL_instruments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:fontFamily="@font/cherry_cream_soda"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UserProfile_LBL_info"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    android:fontFamily="@font/cherry_cream_soda"
                    android:layout_marginEnd="3dp"
                    />

                <TextView
                    android:id="@+id/OtherUserProfile_LBL_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    android:fontFamily="@font/cherry_cream_soda"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>