<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Fragment_Instruments"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Instruments_IMAGE_backGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Row_0"
       android:layout_margin="10dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:text="@string/Instruments_LBL_i_play_on"
        android:textColor="@color/Black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/Row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/Instruments_IMAGE_electric_guitar"
            android:tag="Instruments_IMAGE_electric_guitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/electric_guitar"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_electric_guitar" />

        <ImageView
            android:id="@+id/Instruments_IMAGE_bass_guitar"
            android:tag="Instruments_IMAGE_bass_guitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bass_guitar"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_bass_guitar" />

        <ImageView
            android:id="@+id/Instruments_IMAGE_drums"
            android:tag="Instruments_IMAGE_drums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drums"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_drums" />



        <ImageView
            android:id="@+id/Instruments_IMAGE_singer"
            android:tag="Instruments_IMAGE_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/microphone"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_microphone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/Row_1"
        >



        <ImageView
            android:id="@+id/Instruments_IMAGE_dj"
            android:tag="Instruments_IMAGE_dj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dj"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_dj" />

        <ImageView
            android:id="@+id/Instruments_IMAGE_mandolin"
            android:tag="Instruments_IMAGE_mandolin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mandolin"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_mandolin" />

        <ImageView
            android:id="@+id/Instruments_IMAGE_violin"
            android:tag="Instruments_IMAGE_violin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/violin"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_violin" />

        <ImageView
            android:id="@+id/Instruments_IMAGE_percussion"
            android:tag="Instruments_IMAGE_percussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/percussion"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_percussion" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Row_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@id/Row_1"
        >

        <ImageView
            android:id="@+id/Instruments_IMAGE_keyboard"
            android:tag="Instruments_IMAGE_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/keyboard"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_keyboard" />



        <ImageView
            android:id="@+id/Instruments_IMAGE_flute"
            android:tag="Instruments_IMAGE_flute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flute"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_flute" />

        <ImageView
            android:id="@+id/Instruments_IMAGE_piano"
            android:tag="Instruments_IMAGE_piano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/piano"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_violin" />

        <ImageView
            android:id="@+id/Instruments_IMAGE_saxophone"
            android:tag="Instruments_IMAGE_saxophone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/saxophone"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/Register_IBTN_percussion" />

    </LinearLayout>

    <ImageView
        android:id="@+id/Instruments_IMAGE_rightArrow"
        android:tag="Instruments_IMAGE_rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/right_arrow"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/right_arrow" />

    <ImageView
        android:id="@+id/Instruments_IMAGE_leftArrow"
        android:tag="Instruments_IMAGE_leftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/left_arrow"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/left_arrow" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Instruments_TF_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/Row_2"
        app:counterMaxLength="15"
        app:counterEnabled="true"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Instruments_TF_other"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:ems="10"
            android:maxLength="15"
            />

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>